<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}CleverAge - Process UI{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block top_nav %}
            <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
                <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="#">CleverAge</a>
                <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                {# <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search"> #}
                <ul class="navbar-nav px-3">
                    <li class="nav-item text-nowrap">
                        {% if app.user %}
                            <a class="nav-link" href="#">{{ "Sign out"|trans }}</a>
                        {% else %}
                            <a class="nav-link" href="#">{{ "Login"|trans }}</a>
                        {% endif %}
                    </li>
                </ul>
            </header>
        {% endblock %}

        <div class="container-fluid">
            <div class="row">
                <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                    <div class="position-sticky pt-3">
                        {% block before_sidebar %}{% endblock %}
                        {% block sidebar %}
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link active" href="{{ path('process_ui_index') }}">
                                        <i class="fa fa-home" aria-hidden="true"></i> {{ "Dashboard"|trans }}
                                    </a>
                                </li>
                            </ul>
                        {% endblock %}
                        {% block after_sidebar %}{% endblock %}
                    </div>
                </nav>
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    {% block content %}{% endblock %}
                </main>
            </div>
        </div>
    </body>
</html>